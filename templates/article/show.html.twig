{% extends 'base.html.twig' %}

{% block title %}Détails de l'article{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Détails de l'article</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ article.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ article.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ article.description }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ article.price|format_currency('EUR') }}</td>
                </tr>
                <tr>
                    <th>Marque</th>
                    <td>{{ article.brand.name }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('app_article_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-warning">Modifier</a>
        </div>
    </div>
{% endblock %}

