{% extends 'base.html.twig' %}

{% block title %}Détails de la marque{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Détails de la marque</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ brand.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ brand.name }}</td>
                </tr>
            </tbody>
        </table>

        <h2 class="mt-4">Articles de cette marque</h2>
        
        {% if brand.articles|length > 0 %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for article in brand.articles %}
                    <tr>
                        <td>{{ article.id }}</td>
                        <td>{{ article.name }}</td>
                        <td>{{ article.price|format_currency('EUR') }}</td>
                        <td>
                            <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-sm btn-info">Voir</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Aucun article trouvé pour cette marque.</p>
        {% endif %}

        <div class="mt-3">
            <a href="{{ path('app_brand_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_brand_edit', {'id': brand.id}) }}" class="btn btn-warning">Modifier</a>
        </div>
    </div>
{% endblock %}
