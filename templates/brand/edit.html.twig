{% extends 'base.html.twig' %}

{% block title %}Modifier la marque{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Modifier la marque</h1>

        {{ include('brand/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

        <div class="mt-3">
            <a href="{{ path('app_brand_index') }}" class="btn btn-secondary">Retour à la liste</a>

            <form method="post" action="{{ path('app_brand_delete', {'id': brand.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette marque?');" style="display: inline-block;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ brand.id) }}">
                <button class="btn btn-danger">Supprimer</button>
            </form>
        </div>
    </div>
{% endblock %}

